    <style name="AppTextAppearance.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <!--<item name="cornerFamily">cut</item>-->
        <item name="cornerSize">@dimen/card_default_corner</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!--<item name="cornerFamily">cut</item>-->
        <item name="cornerSize">@dimen/card_default_corner</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/colorOnBackground</item>
        <item name="cornerRadius">@dimen/card_default_corner</item>
    </style>

    <style name="AppCardView" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/colorOnBackground</item>
        <item name="cornerRadius">@dimen/card_default_corner</item>
    </style>

    <style name="AppTheme.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <!--        <item name="android:drawableTint">@color/colorDarkGrayText</item>-->
        <!--        <item name="drawableTint">@color/colorDarkGrayText</item>-->
    </style>

    <style name="AppTheme.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!--slider-->
    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
